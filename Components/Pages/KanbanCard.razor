<div class="kanban-card">
	<h3>@Title</h3>
	<p>@Description</p>
	<button @onclick="AlterarStatus">Mover</button>

</div>

@code {
	[Parameter]
	public EventCallback<string> OnStatusChange { get; set; }

	private async Task AlterarStatus()
	{
		await OnStatusChange.InvokeAsync("DOING"); // Exemplo de mudança para "DOING".
	}


	[Parameter]
	public string Title { get; set; } = "Nova Tarefa";

	[Parameter]
	public string Description { get; set; } = "Descrição da tarefa.";

}